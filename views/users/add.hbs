<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title mb-0">Thêm mới Nhân sự</h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/cms/dashboard">
                                    Admin
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/cms/addManager">
                                    Add Users
                                </a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <section id="basic-form-layouts">
                <div class="row match-height">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-colored-form-control">Thông tin</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a>
                                        </li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a>
                                        </li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a>
                                        </li>
                                        <li><a data-action="close"><i class="ft-x"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form class="form">
                                        <div class="form-body">
                                            <h4 class="form-section"><i class="ft-info"></i> Thông tin cá nhân</h4>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="FullName">Họ tên</label>
                                                        <input type="text" id="FullName" class="form-control border-primary" placeholder="Nhập họ tên" name="FullName">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="Email">Email</label>
                                                        <input type='email' class="form-control border-primary" id="Email" placeholder="Nhập email" name="Email" />
                                                    </div>
                                                </div>                                              
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="RoleId">Chức vụ</label>
                                                        <select id="RoleId" name="RoleId" class="form-control border-primary">
                                                            <option value="" disable="disable">-- Vui lòng chọn --</option>
                                                            {{#each role}}
                                                                <option value="{{Id}}">{{Name}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row hidden" id="HouseIdR">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="HouseId">Căn hộ</label>
                                                        <select id="HouseId" name="HouseId" class="form-control border-primary">
                                                            <option value="" disable="disable">-- Vui lòng chọn --</option>
                                                            {{#each house}}
                                                                <option value="{{Id}}">{{Name}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row hidden" id="FixerGroupIdR">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="FixerGroupId">Nhóm thợ</label>
                                                        <select id="FixerGroupId" name="FixerGroupId" class="form-control border-primary">
                                                            <option value="" disable="disable">-- Vui lòng chọn --</option>
                                                            {{#each fixerGroup}}
                                                                <option value="{{Id}}">{{Name}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <h4 class="form-section"><i class="ft-lock"></i> Thông tin tài khoản</h4>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="userPhone">Số điện thoại</label>
                                                        <input type="number" id="Tel" class="form-control border-primary" placeholder="Nhập số điện thoại" name="Tel">
                                                        <span><p class="text-danger text-sm-left pt-1"><code><i>Yêu cầu nhập đúng số điện thoại người dùng. Ví dụ: 0912345678"</code></i></p></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="Email">Mật khẩu</label>
                                                        <input type='password' class="form-control border-primary" id="Password" placeholder="Nhập mật khẩu" name="Password" />                                                       
                                                    </div>
                                                </div>                                              
                                            </div>
                                        </div>
                                        <div class="form-actions right">
                                            <button type="button" class="btn btn-primary btnSaveUser">
                                                <i class="fa fa-check-square"></i> Lưu
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>