<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-10 mb-2">
            <h3 class="content-header-title mb-0">Tòa nhà</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">
                                Admin
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/cms/createBuilding">
                                &nbsp;tòa nhà
                            </a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        </div>
    <form class="form" id="form_buidling">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Name">Tên tòa nhà</label>
                                <input type="text" id="Name" class="form-control border-primary" name="Name" required="required">
                            </div>
                        </div> 
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Code">Mã</label>
                                <input type="text" id="Code" class="form-control border-primary" name="Code" required="required">
                            </div>
                        </div>                                                            
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Address">Địa chỉ</label>
                                <input type="text" id="Address" class="form-control border-primary" name="Address" required="required">
                            </div>
                        </div> 
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Note">Lưu ý</label>
                                <input type="text" id="Note" class="form-control border-primary" name="Note" required="required">
                            </div>
                        </div>                                                                                              
                    </div>
                    <div class="row">                                                             
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Block">Ngày nộp hóa đơn</label>
                                <select name="BillDateRange" class="form-control border-primary" id="BillDateRange">
                                    <option value="{{CONSTANT.FIRST}}">Ngày 1 đầu tháng</option>
                                    <option value="{{CONSTANT.SECOND}}">Ngày 5 đầu tháng</option>
                                </select>
                            </div>
                        </div> 
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Manager">Người quản lý</label>
                                <select class="form-control" name="Manager" id="Manager">
                                    {{#each manager}}
                                        <option value="{{Id}}">{{FullName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                                                                                    
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="ServicePrice">Giá dịch vụ</label>
                                <input type="number" id="ServicePrice" class="form-control border-primary" name="ServicePrice" required="required">
                            </div>
                        </div> 
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="ElectricBill">Giá điện</label>
                                <input type="number" id="ElectricBill" class="form-control border-primary" name="ElectricBill" required="required">
                            </div>
                        </div> 
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="WaterPrice">Giá nước</label>
                                <input type="number" id="WaterPrice" class="form-control border-primary" name="WaterPrice" required="required">
                            </div>
                        </div>                                                                                              
                    </div>
                    <div class="row">                                                           
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="CarParkPrice">Giá gửi xe hơi</label>
                                <input type="number" id="CarParkPrice" class="form-control border-primary" name="CarParkPrice" >
                            </div>
                        </div>                                                                                                                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="MotobikeParkPrice">Giá gửi xe máy</label>
                                <input type="number" id="MotobikeParkPrice" class="form-control border-primary" name="MotobikeParkPrice" required="required">
                            </div>
                        </div> 
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="BikeParkPrice">Giá gửi xe đạp</label>
                                <input type="number" id="BikeParkPrice" class="form-control border-primary" name="BikeParkPrice " >
                            </div>
                        </div>                                                                                  
                    </div>  
                    <div class="row">                                      
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="hidden" id="Status" class="form-control border-primary" name="Status" value="AC" >
                            </div>
                        </div> 
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="hidden" id="WaterType" class="form-control border-primary" name="WaterType" value="AC" >
                            </div>
                        </div>                                                                                            
                    </div>                                                                                     
                    <button id="btn_addBuilding" type="button" class="btn btn-primary btnSaveBuilding">
                        <i class="fa fa-check-square"></i> Lưu
                    </button>
                </div>                  
            </form>
        </div>
    </div>