<style>
    .form-body{
        border: 1px solid #a09e9e;
        padding: 25px;
    }
    .text-sm{
        font-size: 12px;
    }
    .app-content{
    	background: rgba(140, 140, 140, 0.02)
    }
    .text_h5{
    	font-size: 20px;
    	font-weight: 600;
    	color: #036969;
    	font-family: Tahoma !important;
    }
    .text_h2{
    	font-size: 27px;
    	font-weight: 600;
    	color: #960303;
    	font-family: Tahoma !important;
