    <div class="content-wrapper">
    	<form class="form" id="form_billing">
	        <div class="row mb-1">
	        	<div class="col-md-4">
	        		<img class="float-right p-0" height="80" src="/public/images/logo.png" alt="3SHome">
	        	</div>
	            <div class="col-md-8 float-left p-0">
	                <h5 class="text_h5">{{setting.Name}}</h5>
	                <span class="text-sm">
	                    <b>Địa chỉ: </b><i>{{setting.Address}}</i></br>
	                    <b>Email: </b><i>{{setting.Email}}</i></br>
	                    <b>Hotline: </b><i>{{setting.Phone}}</i></br>
	                </span>
	            </div>
	        </div>
	        <div class="row">
	        	<div class="col-md-12 text-center">
	        		<h2 class="text_h2">Chi tiết hợp đồng
	        		</h2>
	        	</div>
	        </div>
	        <div class="row">
	            <div class="col-md-12 text-center mb-1">
