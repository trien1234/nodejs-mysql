<body class="horizontal-layout horizontal-menu 1-column   menu-expanded blank-page blank-page" data-open="click" data-menu="horizontal-menu" data-col="1-column">
    <div class="app-content container center-layout mt-2">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <form class="form" id="form_user" method="POST" action='/cms/updateUser/{{id}}'>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="FullName">FullName</label>
                                            <input type="text" value='{{user.dataValues.FullName}}' id="FullName" class="form-control border-primary" name="FullName" required="required">
                                        </div>
                                    </div> 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <input type="text" disabled value='{{user.dataValues.Email}}' id="Email" class="form-control border-primary" name="Email" required="required">
                                        </div>
                                    </div>                                                            
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Password">Password</label>
                                            <input type="password" disabled value='{{user.dataValues.Password}}' id="Password" class="form-control border-primary" name="Password" required="required">
                                        </div>
                                    </div> 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="postFile">House</label>
                                            <select class="form-control" name="HouseId"  id="HouseId">
                                                {{#each house}}
                                                    <option value='{{this.dataValues.Id}}'>{{this.dataValues.Name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>                                                                                              
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="postFile">FixerGroup</label>
                                            <select class="form-control" name="FixerGroupId"  id="FixerGroupId">
                                                {{#each fixerGroup}}
                                                    <option value='{{this.dataValues.Id}}'>{{this.dataValues.Name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div> 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="postFile">Role</label>
                                            <select class="form-control" name="RoleId"  id="RoleId">
                                                {{#each role}}
                                                    <option value='{{this.dataValues.Type}}'>{{this.dataValues.Name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>                                                                                              
                                </div>

                                <div class="row">                                      
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="dateOfBirth">Tel</label><!-- check trung-->
                                            <input type="text" disabled value='{{user.dataValues.Tel}}' id="Tel" class="form-control border-primary" name="Tel" required="required">
                                        </div>
                                    </div> 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="hidden" id="Active" class="form-control border-primary" name="Active" value="AC">
                                        </div>
                                    </div>
                                                                                              
                                </div>                                                                                          
                                <button id="btn_uppdateUser" type="submit" class="btn btn-primary btnSaveArticle">
                                    <i class="fa fa-check-square"></i> Save
                                </button>
                            </div>                  
                        </form>
        </div>
    </div>
</body>

</html>