
<div class="app-content content">
    <div class="content-wrapper">
    	<div class="content-header row">
            <div class="content-header-left col-md-10 mb-2">
                <h3 class="content-header-title mb-0">Tin tức</h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/">
                                    Admin
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/cms/listNews">
                                    &nbsp;Tin tức
                                </a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
		<div class="content-body">
            <div class="card">
                {{#if message}}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {{/if}}
                <div class="card-header">
                    <h4 class="card-title" id="basic-layout-colored-form-control">Bảng tin tức</h4>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <table id="table-news" class="table table-striped table-bordered dom-jQuery-events">
                            <thead>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Ảnh
                                    </th>
                                    <th>
                                        Tiêu đề  
                                    </th>
                                    <th>
                                        Tin nổi bật
                                    </th>
                                    <th>
                                        Ngày tạo
                                    </th>
                                    <th>
                                        Hành động
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
		</div>
        <div class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="card-content collapse show">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="form-section"><i class="ft-info"></i> Cập nhật thông tin tin tức<code><b id="fullNameBuilding"></b></code></h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="form" id="form_news" enctype="multipart/form-data" method="post" action="/cms/editNews/12">
                            <div class="form-body">                                    
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="Title">Tiêu đề</label>
                                            <input type="text" id="Title" class="form-control border-primary" name="Title" required="required">
                                        </div>
                                    </div> 
                                </div>
                                <div class="row">
                                    <div class="col-md-2" >
                                        <div class="form-group">
                                            <label for="Image">Ảnh</label>
                                        </div>
                                    </div>   
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <img id="imgEdit" style="margin-left:20" src="" alt="" width="60" height="60">
                                        </div>
                                    </div>                                                          
                                </div> 

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="file" id="Image" class="form-control border-primary" name="Image" accept="image/*">
                                        </div>
                                    </div>                                                          
                                </div>                          
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="ContentEdit">Nội dung</label>
                                            <textarea  id="ContentEdit" name="ContentEdit"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                     <div class="col-md-12">
                                    <div class="form-group">
                                            <label for="IsFeatured">Nổi bật</label>
                                            <select id="IsFeatured" name="IsFeatured" class="form-control border-primary">
                                                <option id="IsFeaturedY" value="1">Yes</option>
                                                <option id="IsFeaturedN" value="0">No</option>
                                            </select>
                                        </div>
                                    </div>                                   
                                </div>
                            </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary save-editNews-data">Lưu</button>
                        </div>
                        </form>
                    </div>
                </div>      
      </div>
        </div>		
	</div>
</div>

<script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace( 'ContentEdit', {
        entities: false,
        basicEntities: false,
        entities_greek: false,
        entities_latin: false,
        htmlDecodeOutput:true,
        enterMode : CKEDITOR.ENTER_P,
        enterMode: CKEDITOR.ENTER_BR, 
    });
</script>