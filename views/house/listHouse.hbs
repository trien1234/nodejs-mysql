
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-10 mb-2">
                <h3 class="content-header-title mb-0">Căn hộ</h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/">
                                    Admin
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/cms/listHouse">
                                    &nbsp;căn hộ
                                </a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="basic-layout-colored-form-control">Bảng căn hộ</h4>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="BuildingIdSearch">Tìm kiếm theo tòa nhà</label>
                                <select class="form-control" name="BuildingIdSearch"  id="BuildingIdSearch">
                                </select>
                            </div>
                        </div>
                        {{#isnt sess.Role.Name 'AccountingLead'}}
                        <table id="table-house" class="table table-striped table-bordered dom-jQuery-events">
                            <thead>
                                <tr>
                                    <th>
                                        Tên căn hộ
                                    </th>
                                    <th>
                                        Mã
                                    </th>
                                    <th>
                                        Block
                                    </th>
                                    <th>
                                        Tầng
                                    </th> 
                                    <th>
                                        Tòa nhà
                                    </th>
                                    <th>
                                        Quản lý
                                    </th> 
                                    <th>
                                        Trạng thái
                                    </th> 
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                        </table>
                        {{/isnt}}
                        {{#is sess.Role.Name 'AccountingLead'}}
                        {{!-- {{#if error}}
                            <div class="alert alert-danger">{{error.error}}</div>
                        {{/if}} --}}
                        <table id="table-accountingHouse" class="table table-striped table-bordered dom-jQuery-events">
                            <thead>
                                <tr>
                                    <th>
                                        Mã
                                    </th>
                                    <th>
                                        Tên
                                    </th>                             
                                    <th>
                                        Block
                                    </th>
                                    <th>
                                        Tầng
                                    </th> 
                                    <th>
                                        Tòa nhà
                                    </th>  
                                    <th>
                                        Hành động
                                    </th>                           
                                </tr>
                            </thead>
                        </table>
                        {{/is}}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal modal_House" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="form-section"><i class="ft-info"></i> Cập nhật thông tin căn hộ<code><b id="fullNameHouse"></b></code></h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="form">
                            <div class="form-body">                                    
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Building">Tòa nhà</label>
                                        <select disabled="disabled" class="form-control" name="Building"  id="Building">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Manager">Người quản lý tòa nhà</label>
                                        <select disabled="disabled" class="form-control" name="Manager"  id="Manager">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Name">Tên căn hộ</label>
                                        <input type='text'  class="form-control border-primary" id="Name" placeholder="Nhập tên" name="Name" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Code">Mã</label>
                                        <input type='text' disabled="disabled" class="form-control border-primary" id="Code" placeholder="Nhập code" name="Code" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Note">Lưu ý</label>
                                        <input type='text' class="form-control border-primary" id="Note" placeholder="Nhập lưu ý" name="Note" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Floor">Tầng</label>
                                        <input type='text' disabled="disabled" class="form-control border-primary" id="Floor"  name="Floor" />
                                    </div>
                                </div>    
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Block">Khu</label>
                                        <input type='text' disabled="disabled" class="form-control border-primary" id="Block"  name="Block" />
                                    </div>
                                </div>   
                                {{!-- <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="Status">Trạng thái</label>
                                        <input type='text' disabled="disabled" class="form-control border-primary" id="Block"  name="Block" />
                                    </div>
                                </div>                                                                                                --}}
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary save-house-data">Lưu</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal modal_status_house " id="status" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="form-section"><i class="ft-info"></i> Cập nhật trạng thái căn hộ<code><b id="nameHouse"></b></code></h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <d class="form">
                            <div class="form-body">                                                                      
                                <div class="row">      
                                    <div class="col-md-12">
                                        <label for="Status">Trạng thái</label>
                                        <select name="StatusHouse" class="form-control border-primary" id="StatusHouse">
                                            {{#each houseStatus}}
                                                <option value="{{Code}}">{{Description}}</option>
                                            {{/each}}
                                        </select>
                                    </div>                                                                                                                                                     
                                </div>                                                                                                
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary save-edit-status-house-data">Lưu</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal modal_createBill" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="form-section"><i class="ft-layers"></i> Tạo hoá đơn</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="form">
                            <div class="form-body">                                    
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="typeBill">Loại</label>
                                        <select class="form-control border-primary" name="typeBill" id="typeBill">
                                            <option value="2">Hoá đơn hàng tháng</option>
                                            <option value="3">Thanh lý</option>
                                        </select>
                                    </div>
                                </div>
                                                                                                                             
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary createBill">Tạo</button>
                    </div>
                </div>
            </div>
        </div>      
    </div>
</div>